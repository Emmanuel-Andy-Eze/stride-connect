            <a href="/login" class="btn sign-in bg-dark" style="color: #fff; padding: .3rem .5rem; font-size: .8rem; border: 1px solid #fff; outline: none; border: .5px solid #fff;">
                Get Started
            </a>
        <% } %>
    </div>
</div>

<main>
    <div class="main-left">
        <ul class="nav-links">
            <li><a href="#" class="nav-link"><i class="fas fa-home"></i> Home</a></li>
            <li><a href="#" class="nav-link"><i class="far fa-newspaper"></i> Articles</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-video"></i> Videos</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-podcast"></i> Podcasts</a></li>
        <hr>
            <li><a href="#" class="nav-link"><i class="far fa-bell"></i> Notifications</a></li>
            <li><a href="#" class="nav-link"><i class="far fa-envelope"></i> Messages</a></li>
        <hr>
            <li><a href="#" class="nav-link"><i class="fas fa-user-circle"></i> Profile</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-cog"></i> Settings</a></li>
            <li><a href="#" class="nav-link"><i class="fas fa-sign-out-alt"></i> Sign Out</a></li>
        </ul>
    </div>

    <div class="main-center">
        <div class="action-center">
            <div class="new-action">
                <a href="/" class="action-icon" style="border: none;"><i class="fas fa-book-open"></i> Articles</a>
                <a href="/videos" class="action-icon active" style="background-color: transparent; border-bottom: 3px solid #e0e0e0; border-right: none; border-left: none; border-top: none; color: #e0e0e0;"><i class="fas fa-video"></i> Videos</a>
                <a href="#" class="action-icon" style="border: none;"><i class="fas fa-microphone-alt"></i> Podcasts</a>
                <a href="#" class="action-icon" style="border: none;"><i class="fas fa-users"></i> Community</a>
                <a href="#" class="action-icon" style="border: none;"><i class="fas fa-comments"></i> Chats</a>
            </div>

            <div class="people">
                
            </div>
        </div>
        
        <div class="feeds">
            <% if(videos.length > 0){ %>
                <% videos.forEach(function(video){ %>
                    <div class="feed bg-dark">
                        <div class="feed-image">
                            <!-- <img src="https://www.bakedbyanintrovert.com/wp-content/uploads/2018/05/Birthday-Cake-Recipe-Image-735x735.jpg" alt=""> -->
                        </div>
                        <div class="feed-header">
                            <div class="author-detail pt-1">
                                <img src="<%= video.user.image %> " alt="" class="author-img">
                                <div class="feed-author-time">
                                    <span style="font-size: .8rem;"><%= video.user.name %> </i></span>
                                    <span class="time" style="font-size: .6rem;"><%= moment(video.created).fromNow() %></span>
                                </div>
                            </div>
                           
                                <div class="feed-action">
                                    
                                </div>
                           
                        </div>
        
                        <div class="feed-center-split" style="display: flex; justify-content: space-between; align-items: center;">
                            <div class="feed-center" style="padding: 0; width: 95%; margin: 1rem auto 0 auto;">
                                <div class="video mb-1">
                                    <div class="post-image mb-1">
                                        <div class="video-play" style="width: 20%; margin: 0 auto; height: 0;">
                                            <a href="/videos/<%= video._id %> "><i class="fa fa-play-circle" style="font-size: 4rem; position: relative; top: 5.5rem; z-index: 300;"></i></a>
                                        </div>
                                        
                                        <video style="width: 100%;">
                                            <source src="<%= video.video %> " type="video/mp4">
                                            <source src="movie.ogg" type="video/ogg">
                                          Your browser does not support the video tag.
                                          </video>
                                        
                                    </div>
                                </div>
                                <a href="/videos/<%= video._id %> "><p class="feed-title" style="font-family: 'Source Sans Pro', sans-serif; font-weight: 900;"><%= video.title %></p></a>
                                <div class="feed-category">
                                    <p class="category"><%= video.category %></p>
                                </div>
                            </div>
                        </div>
                        
                    
                        
                        <!-- <hr class="feed-line"> -->
                        <div class="feed-bottom">
                            <ul class="feed-icons">
                                <li><a href="#"><i class="fas fa-heart"></i> 1.6k</a></li>
                                <li class="me-3"><i class="far fa-comment-alt"></i> 101</li>
                                <li><a href="#"><i class="far fa-eye"></i> 500</a></li>
                            </ul>
                            <div class="bookmark">
                                <a href="#"><i class="fas fa-bookmark" style="font-size: 1.2rem;"></i></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
                
            <% } else { %>
                <div class="nothing">
                    <h5>No Video to display at the moment</h5>
                    <p>Check back later!</p>
                </div>
            <% } %>
        </div>
    </div>

    <div class="main-right">
        <div class="advert">
            <img src="/public/img/stride_small.png" alt="">
        </div>
        <hr>
        <div class="following">
            <h5>Authors you read</h5>
            <ul class="authors">
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
                <li><img src="../public/Emmanuel.jpg" alt="Author Image" class="author-img"><a href="#">Emmanuel Eze</a></li>
            </ul>
        </div>
    </div>
</main>

